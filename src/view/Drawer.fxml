<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPopup?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="190.0" style="-fx-background-color: #FFF;" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.employee.DrawerController">
   <children>
      <VBox prefHeight="170.0" prefWidth="190.0" style="-fx-background-color: #303f9f;">
         <children>
            <Pane prefHeight="159.0" prefWidth="190.0">
               <children>
                  <ImageView fx:id="accountPicture" fitHeight="82.0" fitWidth="148.0" layoutX="46.0" preserveRatio="true">
                     <image>
                        <Image url="@../../Logo.png" />
                     </image>
                  </ImageView>
               </children>
            </Pane>
            <Pane layoutX="10.0" layoutY="10.0" prefHeight="188.0" prefWidth="190.0">
               <children>
                  <Label fx:id="name" layoutX="14.0" layoutY="33.0" text="Bangala" textFill="WHITE" />
                  <Label fx:id="email" layoutX="14.0" layoutY="62.0" text="bagalzz@gmail.com" textFill="WHITE" />
               </children>
            </Pane>
         </children>
      </VBox>
      <AnchorPane prefHeight="350.0" prefWidth="190.0">
         <children>
            <JFXButton fx:id="jobsButton" onAction="#handleJobs" prefHeight="55.0" prefWidth="190.0" style="-fx-background-color: #4059a9;" stylesheets="@../application/application.css" text="HOME" textFill="WHITE">
               <font>
                  <Font name="Segoe UI Light" size="12.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="historyButton" layoutY="55.0" onMouseClicked="#showPopup" prefHeight="55.0" prefWidth="190.0" stylesheets="@../application/application.css" text="MY JOBS">
               <font>
                  <Font name="Segoe UI Light" size="12.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="profileButton" layoutY="112.0" onAction="#handleProfile" prefHeight="55.0" prefWidth="190.0" stylesheets="@../application/application.css" text="PROFILE">
               <font>
                  <Font name="Segoe UI Light" size="12.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="feedbackButton" layoutY="167.0" onAction="#handleFeedback" prefHeight="55.0" prefWidth="190.0" stylesheets="@../application/application.css" text="FEEDBACK">
               <font>
                  <Font name="Segoe UI Light" size="12.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="logoutButton" ellipsisString="" layoutY="305.0" onAction="#handleLogout" prefHeight="45.0" prefWidth="190.0" style="-fx-background-color: #E57373;" stylesheets="@../application/application.css" text="Log Out" textFill="#ffcdd2" />
            <JFXPopup fx:id="popup" />
            <FontAwesomeIconView fill="WHITE" glyphName="HOME" layoutX="14.0" layoutY="38.0" size="28" wrappingWidth="22.714284896850586" />
            <FontAwesomeIconView fill="GREY" glyphName="HISTORY" layoutX="17.0" layoutY="88.0" size="28" />
            <FontAwesomeIconView fill="GREY" glyphName="USER" layoutX="18.0" layoutY="149.0" size="28" />
            <FontAwesomeIconView fill="GREY" glyphName="COMMENTS" layoutX="15.0" layoutY="204.0" size="28" />
            <JFXButton layoutY="222.0" onAction="#handleCalendar" prefHeight="55.0" prefWidth="190.0" stylesheets="@../application/application.css" text="CALENDAR">
               <font>
                  <Font name="Segoe UI Light" size="12.0" />
               </font>
            </JFXButton>
            <FontAwesomeIconView fill="GREY" glyphName="CALENDAR" layoutX="16.0" layoutY="259.0" size="28" />
         </children>
      </AnchorPane>
   </children>
</VBox>
